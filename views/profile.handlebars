<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.avatar}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <p><b>{{CommentCount}}</b> 已評論餐廳</p>
    <p><b>{{FavoriteRestCount}}</b> 收藏的餐廳</p>
    <p><b>{{FollowingCount}}</b> followings (追蹤者)</p>
    <p><b>{{FollowerCount}}</b> followers (追隨者)</p>
    <div class="form-row">
      <form action="/users/{{user.id}}/edit" method="GET">
        <input type="hidden" name="userId" value="{{user.id}}" />
        <button type="submit" class="btn btn-primary mx-1">Edit</button>
      </form>
      <form action="/following/{{user.id}}" method="POST" style="display: contents;">
        <button type="submit" class="btn btn-primary mx-1">追蹤</button>
      </form>
    </div>
  </div>
</div>
<hr>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card mt-5">
      <h6 class="card-header"><b>{{FollowingCount}}</b> followings (追蹤者)</h6>
      <div class="card-body">
        {{#each followings}}
        <a href="/users/{{this.id}}" style="display: inline-block;">
          <img src="{{this.avatar}}" class="m-2" style="width: 3rem; height: 3rem;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card mt-5">
      <h6 class="card-header"><b>{{CommentCount}}</b> 已評論餐廳</h6>
      <div class="card-body">
        {{#each comments}}
        <a href="/restaurants/{{this.restaurantId}}" style="display: inline-block;">
          <img src="{{this.restaurantImage}}" class="m-2" style="width: 3rem; height: 3rem;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <div class="card mt-5">
      <h6 class="card-header"><b>{{FollowerCount}}</b> followers (追隨者)</h6>
      <div class="card-body">
        {{#each followers}}
        <a href="/users/{{this.id}}" style="display: inline-block;">
          <img src="{{this.avatar}}" class="m-2" style="width: 3rem; height: 3rem;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card mt-5">
      <h6 class="card-header">{{FavoriteRestCount}}</b> 收藏的餐廳</h6>
      <div class="card-body">
        {{#each restaurants}}
        <a href="/restaurants/{{this.id}}" style="display: inline-block;">
          <img src="{{this.image}}" class="m-2" style="width: 3rem; height: 3rem;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<br />
<br />